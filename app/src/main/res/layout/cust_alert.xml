<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back_cicle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:id="@+id/close"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/img_dialog"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nisn"
                    android:fontFamily="@font/roboto"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_gravity="center"
                    android:id="@+id/dialog_profile_nis"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Siswa"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/roboto"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@+id/dialog_profile_nama"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Database Lost Connection."
                    android:fontFamily="@font/roboto"
                    android:textSize="14dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:id="@+id/dialog_profile_tgl"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please Try Again!"
                    android:fontFamily="@font/roboto"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_gravity="center"
                    android:id="@+id/dialog_profile_agama"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please Try Again!"
                    android:fontFamily="@font/roboto"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_gravity="center"
                    android:id="@+id/dialog_profile_kelamin"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/blue"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:id="@+id/edit_dialog">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/grey"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:layout_gravity="center"
                    android:id="@+id/logout_dialog"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>