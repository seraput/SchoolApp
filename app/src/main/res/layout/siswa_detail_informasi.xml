<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.siswa.home.extend.SiswaDetailInformasi">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="-20dp"
        android:background="@drawable/bg_detail"/>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-40dp"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="@color/blue"
        android:onClick="det_info_back"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Septian"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:id="@+id/det_info_created"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diposting pada 17-08-2021"
            android:textColor="#7A7979"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:id="@+id/det_info_tgl"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pembukaan Daftar Ulang"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans"
            android:layout_marginTop="40dp"
            android:maxLines="2"
            android:id="@+id/det_info_judul"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Kepada Bapak / Ibu Wali Murid."
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans"
            android:layout_marginTop="20dp"
            android:id="@+id/det_info_ucapan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="15"
            android:text="@string/contoh"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingMultiplier="1.2"
            android:fontFamily="@font/open_sans"
            android:layout_marginTop="10dp"
            android:id="@+id/det_info_isi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text=""
            android:visibility="gone"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:layout_marginTop="20dp"
            android:lineSpacingMultiplier="1.2"
            android:id="@+id/det_info_peting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="Demikian informasi ini saya sampaikan."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:layout_marginTop="20dp"
            android:lineSpacingMultiplier="1.2"
            android:id="@+id/det_info_penutup"/>

    </LinearLayout>

</RelativeLayout>